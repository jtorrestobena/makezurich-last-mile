<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="enable_tls"
        android:summary="@string/pref_description_tls"
        android:title="@string/pref_title_tls" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_data_api"
        android:summary="@string/pref_description_data_api"
        android:title="@string/pref_title_data_api" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_ttn_app_id"
        android:inputType="text"
        android:key="ttn_app_id"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ttn_app_id" />

    <EditTextPreference
        android:capitalize="none"
        android:inputType="textPassword"
        android:key="ttn_app_access_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ttn_app_access_key" />

    <ListPreference
        android:defaultValue="@string/ttn_handler_default_value"
        android:entries="@array/pref_ttn_handler_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="ttn_handler"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_ttn_handler" />

</PreferenceScreen>
